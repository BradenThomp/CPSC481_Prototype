@page "/Contact"
@inject IToastService toastService

<PageTitle>Contact</PageTitle>

<h1>Need Help ?</h1>

<p>Call 111-111-1111</p>

<p>or</p>

<EditForm Model="@model" OnValidSubmit="@onValidSubmit">
    <div class="form-group">
        <div class="row">
            <div class="col">
                <label for="EmailAdress">Email Address <InputText id="emailAdress" @bind-Value="@model.EmailAddress" class="form-control"></InputText></label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col">
                <label for="Problems">Problems</label>
                <InputTextArea id="Problems" @bind-Value="@model.Problems" class="form-control" rows="10"></InputTextArea>
            </div>
        </div>
    </div>
    <div>
        <button class="btn btn-secondary" @onclick="@(()=> toastService.ShowSuccess("Inquiry recieved, our staff will review your message and get back to you via email."))" style="background-color: #6b9080">Send</button>
    </div>
</EditForm>


@page "/Home"
@layout MainLayoutHomePage
@inject NavigationManager UriHelper
@inject LibraryItemStore LibraryItemStore



<head>
    <link rel="stylesheet" href="..\wwwroot\css\app.css">
    <link rel="stylesheet" href="http://getbootstrap.com/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css">

    <link href="_content/Blazorise/blazorise.css" rel="stylesheet" />
    <link href="_content/Blazorise.Bootstrap/blazorise.bootstrap.css" rel="stylesheet" />

</head>

<br />
<br />
<div class="input-group search-input">
    <input type="text" class="form-control" placeholder="Search keywords. Ex. Harry Potter, Cooking, science fiction..." @bind-value="searchTerm" aria-label="Search..." aria-describedby="basic-addon2">
    <div class="input-group-append">
        <button class="btn btn-outline-dark" @onclick="@searchItem">Search</button>
    </div>
</div>

<br />
<h1><center>Explore<br /></center></h1>
<div class="container">
    <div class="row">
        <div class="col-sm text-center">
            
        </div>
        <div class="col-sm text-center">
            <button type="button" class="btn btn-outline-dark btn-lg" @onclick="@booksClicked"><center>BOOKS</center></button>
        </div>
        <div class="col-sm text-center">
            <button type="button" class="btn btn-outline-dark btn-lg" @onclick="@musicClicked"><center>MUSIC</center></button>
        </div>
        <div class="col-sm text-center">
            <button type="button" class="btn btn-outline-dark btn-lg" @onclick="@moviesClicked"><center>MOVIES</center></button>
        </div>
        <div class="col-sm text-center">
            
        </div>
    </div>
</div>

<br />
<br />
<h1><center>@featuredItems</center></h1>

<div class="carousel">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100 center-block" src=@item1 alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 center-block" src=@item2 alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src=@item3 alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<style>
    .carousel {
        width: 400px;
        height: 400px;
        align-items: center;
        margin: auto;
    }
</style>






@code{
    private string selectedSlide = "2";
    private string searchTerm;
    private string featuredItems = "Featured Books";
    private string item1 = "images/Goodnightmoon.jpg";
    private string item2 = "images/Holes.jpg";
    private string item3 = "images/TheTwits.jpg";

    private string click1 = "";
    private string click2 = "";
    private string click3 = "";
    private async Task searchItem()
    {
        Console.WriteLine(searchTerm);
        UriHelper.NavigateTo($"searchresults/{searchTerm}");
    }

    private async Task booksClicked()
    {
        Console.WriteLine("books was clicked");
        item1 = "images/Goodnightmoon.jpg";
        item2 = "images/Holes.jpg";
        item3 = "images/TheTwits.jpg";
        featuredItems = "Featured Books";

    }

    private async Task moviesClicked()
    {
        Console.WriteLine("movies was clicked");
        item1 = "images/jurassic_world.jpg";
        item2 = "images/AzkbnMovie.jpg";
        item3 = "images/taken.jpg";
        featuredItems = "Featured Movies";


    }

    private async Task musicClicked()
    {
        Console.WriteLine("music was clicked");
        item1 = "images/King_Gizzard_and_the_Lizard_Wizard_-_Fishing_for_Fishies.png";
        item2 = "images/lz2.jpg";
        item3 = "images/war.jpg";
        featuredItems = "Featured Music";

    }






}

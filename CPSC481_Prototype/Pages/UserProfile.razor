@page "/UserProfile"
@layout MainLayoutUser

<head>
    <link rel="stylesheet" type="text/css" href="Buttons.css" media=”screen” />
</head>

<PageTitle>UserProfile</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-3">
            <h1 class="text-center"> My Profile </h1>
            <img class="img-thumbnail rounded-circle" src="images/ProfilePic.jpg" />
        </div>
        <div class="col-4">
            <div class="border p-2 mt-4">
                <h3 class="h3">Harry Potter</h3>
                <h6 class="h6">Library ID: 123456</h6>
                <h6 class="h6">Phone Number: 123-123-1234</h6>
                <h6 class="h6">Email Address: harry@hogwarts.com</h6>
                <h6 />
            </div>
            <div class="border p-2 mt-4">
                <h6> Manage my items:</h6>

                <div class="btn-group" role="group" aria-label="Basic example">
                    <a type="button" role="button" class="btn button-77" href="Wishlist">Wishlist</a>
                    <a type="button" role="button" class="btn button-24" href="OnHold">On Hold</a>
                    <a type="button" class="btn btn-secondary" style=" background-color: #6b9080" href="#">Borrow History</a>
                </div>

            </div>
        </div>

        <div class="col-4">
            <div class="border p-2 mt-4">
                <h5 class="text-center">Currently Checked Out</h5>
                <div class="300-px-height">
                    <div class="carousel">
                        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="img-fluid d-block w-30 center-block" src="images/Goodnightmoon.jpg" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="img-fluid d-block w-30 center-block" src="images/Holes.jpg" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="img-fluid d-block w-30 center-block" src="images/TheTwits.jpg" alt="Third slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="false"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
                <hr />
                <button class="btn btn-secondary btn-center" style="background-color: #6b9080">See Checked-out Items</button>
            </div>
        </div>
    </div>

    <hr class="mt-4 mb-4" />
    <h5 class="text-center">Recently Viewed</h5>
    <HorizontalScroll></HorizontalScroll>

</div>


<Modal @ref="_modalRef">
    <ModalContent Centered Size="Blazorise.ModalSize.ExtraLarge">
        <ModalBody>
            <MapLayout></MapLayout>
        </ModalBody>
        <ModalFooter>
            <Button Color="Color.Secondary" Clicked="@HideModal">Close</Button>
        </ModalFooter>
    </ModalContent>
</Modal>


@code {
    private Modal _modalRef;

    private Task ShowModal()
    {
        return _modalRef.Show();
    }

    private Task HideModal()
    {
        return _modalRef.Hide();
    }
}



